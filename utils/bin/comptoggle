#!/bin/sh
mypicom(){
 picom \
  --backend xrender     \
  --no-fading-openclose \
  --unredir-if-possible \
  --use-damage          \
  ${@} & disown

 exit 0
}

picompid="$(pidof picom)"
if [ ! -z "${picompid}" ]
 then
  for i in ${picompid}; do
   kill -15 "${i}"
  done
 else
  case "${1}" in
   v) mypicom --vsync ;;
   *) mypicom         ;;
  esac
fi
